<style>
  h1 {
    margin: 0.5rem 0 0.25rem 0;
  }

  .info {
    margin: 1rem 0;
  }

  .row {
    display: flex;
    gap: 0.75rem;
    padding: 0.4rem 0;
  }

  dt {
    width: 70px;
    font-weight: 600;
  }

  dd {
    margin: 0;
  }
</style>
