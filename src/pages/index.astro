---
import Layout from "../layouts/Base.astro";
import Container from "../components/Container.astro";
import SimpleNav from "../components/SimpleNav.astro";

const seo = {
  title: "Yongting You",
};
---

<Layout seo={seo}>
  <Container>
    <SimpleNav />

    <h1>Yongting You</h1>
    <!-- <p>Minimal personal site and blog.</p> -->

    <dl class="info">
      <div class="row">
        <dt>GitHub</dt>
        <dd><a href="https://github.com/2010YOUY01" target="_blank" rel="noreferrer">github.com/2010YOUY01</a></dd>
      </div>
      <div class="row">
        <dt>Email</dt>
        <dd><a href="mailto:2010youy01@gmail.com">2010youy01@gmail.com</a></dd>
